@using EVEClient.NET.Identity

@inject IEveUserAccessor<EveOnlineUser> UserAccessor

<link href="https://cdn.jsdelivr.net/npm/bootstrap-avatar@latest/dist/avatar.min.css" rel="stylesheet">

<ul class="navbar-nav">
    @if (UserAccessor.IsAuthenticated == true)
    {
        <li class="nav-item">
            <div class="avatar">
                <img class="avatar avatar-48 bg-light rounded-circle text-white p-2" src="@(UserAccessor.User.PortraitUrl + "&size=64")" alt="avatar">
            </div>
        </li>
        <li class="nav-item">
            <div class="nav-link text-dark">Hello @User.Identity?.Name!</div>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Login"><img src="https://web.ccpgamescdn.com/eveonlineassets/developers/eve-sso-login-black-large.png" /></a>
        </li>
    }
</ul>
